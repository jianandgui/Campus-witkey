<mapper namespace="cn.edu.swpu.cins.weike.dao.MessageDao">


    <insert id="addMessage" parameterType="cn.edu.swpu.cins.weike.entity.persistence.Message">

      INSERT INTO
      message
      (from_name,to_name,content,create_date,has_read,project_about)
